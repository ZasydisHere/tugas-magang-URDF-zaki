<robot name="mobile_arm">

  <link name="world"/>

  <link name="base_link">
    <visual>
      <geometry><box size="0.30 0.20 0.10"/></geometry>
      <origin xyz="0 0 0.05"/>
      <material name="body"><color rgba="0.5 0.7 1 1"/></material>
    </visual>
  </link>

  <joint name="base_fixed" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
  </joint>

  <link name="wheel_left">
    <visual>
      <geometry><cylinder length="0.05" radius="0.07"/></geometry>
      <origin xyz="0 0.15 0.05" rpy="1.57 0 0"/>
      <material name="wheel"><color rgba="0.1 0.1 0.1 1"/></material>
    </visual>
  </link>

  <joint name="wheel_left_joint" type="fixed">
    <parent link="base_link"/>
    <child link="wheel_left"/>
  </joint>

  <link name="wheel_right">
    <visual>
      <geometry><cylinder length="0.05" radius="0.07"/></geometry>
      <origin xyz="0 -0.15 0.05" rpy="1.57 0 0"/>
      <material name="wheel"/>
    </visual>
  </link>

  <joint name="wheel_right_joint" type="fixed">
    <parent link="base_link"/>
    <child link="wheel_right"/>
  </joint>


  <link name="upper_arm">
    <visual>
      <geometry><cylinder length="0.40" radius="0.04"/></geometry>
      <origin xyz="0.20 0 0" rpy="0 1.57 0"/>
      <material name="blue"><color rgba="0.2 0.6 1 1"/></material>
    </visual>
  </link>

  <joint name="shoulder" type="revolute">
    <axis xyz="0 0 1"/> <!-- YAW -->
    <limit lower="-1.57" upper="1.57" effort="30" velocity="2"/>
    <parent link="base_link"/>
    <child link="upper_arm"/>
    <origin xyz="0.10 0 0.10"/>
  </joint>

  <link name="forearm">
    <visual>
      <geometry><cylinder length="0.30" radius="0.035"/></geometry>
      <origin xyz="0.15 0 0" rpy="0 1.57 0"/>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="elbow" type="revolute">
    <axis xyz="0 1 0"/> <!-- PITCH -->
    <limit lower="-1.57" upper="1.57" effort="30" velocity="2"/>
    <parent link="upper_arm"/>
    <child link="forearm"/>
    <origin xyz="0.40 0 0"/>
  </joint>

  <link name="barrel">
    <visual>
      <geometry><cylinder length="0.25" radius="0.03"/></geometry>
      <origin xyz="0.125 0 0" rpy="0 1.57 0"/>
      <material name="black"><color rgba="0.1 0.1 0.1 1"/></material>
    </visual>
  </link>

  <joint name="wrist" type="revolute">
    <axis xyz="0 1 0"/> <!-- PITCH -->
    <limit lower="-1" upper="1" effort="10" velocity="2"/>
    <parent link="forearm"/>
    <child link="barrel"/>
    <origin xyz="0.30 0 0"/>
  </joint>

</robot>
